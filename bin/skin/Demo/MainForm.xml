<?xml version="1.0" encoding="utf-8"?>
<Window caption="0,0,0,30" roundcorner="5,5" size="800,600" sizebox="6,6,6,6" mininfo="80,60">
    <Font name="微软雅黑" size="12" bold="false" default="true" />
    <Font name="微软雅黑" size="12" bold="true"/>

    <VerticalLayout bkcolor="#FFFFFFFF" menu="false">
        <HorizontalLayout name="header" height="30" bkcolor="RGB(39,140,222)">
            <HorizontalLayout>
                <HorizontalLayout width="10">
                    <!-- 阴影窗口控件有点问题，会影响控件的布局，解决办法是放到起“占位”作用的布局控件下！ -->
                    <Shadow offset="7,7" width="814" height="614" activeimage="file='shadow.png' corner='20,18,20,18'" />
                </HorizontalLayout>
                <Label name="apptitle" text="Duilib界面库控件示例" font="1" textcolor="#FFFFFFFF" />
            </HorizontalLayout>
            <HorizontalLayout height="25" width="60">
                <Button name="minbtn" tooltip="最小化" width="30" height="25" normalimage="minimize0.png" hotimage="minimize1.png" pushedimage="minimize2.png"/>
                <Button name="closebtn" tooltip="关闭" width="30" height="25" normalimage="close0.png" hotimage="close1.png" pushedimage="close2.png"/>
            </HorizontalLayout>
        </HorizontalLayout>

        <HorizontalLayout name="body">
            <Control bkcolor="RGB(255,0,0)" />
            <Control bkcolor="RGB(255,255,0)" />
        </HorizontalLayout>
    </VerticalLayout>
</Window>